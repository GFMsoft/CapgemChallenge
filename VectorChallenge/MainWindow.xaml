            <Rectangle x:Name="rectLeft" HorizontalAlignment="Left" Height="206" Margin="10,0,0,0" Stroke="Black" VerticalAlignment="Center" Width="418"/>
            <Rectangle x:Name="rectRight" HorizontalAlignment="Center" Height="206" Stroke="Black" VerticalAlignment="Center" Width="276" Canvas.Left="428"/>
