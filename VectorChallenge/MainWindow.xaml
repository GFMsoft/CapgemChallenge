            <TextBox x:Name="txtBoxVector2Y" HorizontalAlignment="Left" Margin="280,87,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" PreviewTextInput="NumberValidationTextBox"/>
            <TextBox x:Name="txtBoxVector2Z" HorizontalAlignment="Left" Margin="280,121,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" PreviewTextInput="NumberValidationTextBox"/>
            <Label x:Name="lblVector1X" Content="X:" HorizontalAlignment="Left" Margin="39,48,0,0" VerticalAlignment="Top"/>
